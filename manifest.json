{
  "manifest_version": 3,
  "name": "Productivity Tracker",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webNavigation",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/*"
  ]
}
